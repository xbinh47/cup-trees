---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bracket Tools">
	<main>
		<h1>üõ†Ô∏è Bracket Tools</h1>
		<p>Select a tool to get started:</p>
		
		<div class="tools-grid">
			<a href="/bracket" class="tool-card">
				<span class="icon">üèÜ</span>
				<h2>Bracket Viewer</h2>
				<p>Visualize tournament brackets with interactive match details</p>
			</a>
			
			<!-- Future tools can be added here -->
			<div class="tool-card coming-soon">
				<span class="icon">‚ûï</span>
				<h2>More Tools</h2>
				<p>Additional tools coming soon...</p>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}

	h1 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: #e94560;
	}

	p {
		text-align: center;
		font-size: 1.1rem;
		margin-bottom: 3rem;
		color: #aaa;
	}

	.tools-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	.tool-card {
		background: #252a41;
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 12px;
		padding: 2rem;
		text-decoration: none;
		color: inherit;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.tool-card:hover {
		transform: translateY(-5px);
		border-color: #e94560;
		box-shadow: 0 10px 30px rgba(233, 69, 96, 0.2);
	}

	.tool-card.coming-soon {
		opacity: 0.5;
		cursor: default;
	}

	.tool-card.coming-soon:hover {
		transform: none;
		border-color: rgba(255, 255, 255, 0.1);
		box-shadow: none;
	}

	.icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.tool-card h2 {
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
		color: #fff;
	}

	.tool-card p {
		font-size: 0.9rem;
		color: #aaa;
		margin: 0;
	}
</style>
